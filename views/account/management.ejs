<main id="account-management">  
    <h1>Account Management</h1>

    <h2>Welcome <%= accountData.account_firstname %></h2>

    <!-- Flash messages -->
    <%- messages() %>

    <!-- Update account link (always visible) -->
    <p>
        <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
    </p>
        <!-- My Cars link (always visible) -->
    <p>
        <a href="/sell-car/my-cars">My Cars</a>
    </p>
    <!-- Only show inventory management for Employee/Admin -->
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/management">Manage Inventory</a></p>
        <p><a href="/sell-car/admin">Customer Sell Car Requests</a></p>
    <% } %>     
</main>