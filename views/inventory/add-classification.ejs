<%- include('../partials/header.ejs') %>

<%locals.title = "Add Classification | CSE 340 App"%>

<main id="add-classification">
    <h1>Add New Classification</h1>
        <% if (locals.message) { %>
        <div class="notice"><%= message %></div>
    <% } %>

    <form action="/inv/add-classification" method="post" id="addClassificationForm">
        <label for="classification_name">Classification Name:</label>
        <input 
        type="text" 
        name="classification_name" 
        id="classification_name" 
        pattern="^[A-Za-z]+$"
        title="Letters only. No spaces or special characters."
        placeholder="no spaces or special characters" 
        required>
        <button type="submit">Add Classification</button>
    </form>
    <%- include('../partials/footer.ejs') %>

</main>