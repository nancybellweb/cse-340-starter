<h1 class="delete-title">Delete <%= inv_make %> <%= inv_model %></h1>

<p class="delete-warning">Confirm Deletion - The delete is permanent.</p>

<form action="/inv/delete" method="post" id="deleteForm" class="delete-form">

    <div class="delete-field">
        <label for="inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly>
    </div>

    <div class="delete-field">
        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly>
    </div>

    <div class="delete-field">
        <label for="inv_year">Year</label>
        <input type="text" id="inv_year" name="inv_year" value="<%= inv_year %>" readonly>
    </div>

    <div class="delete-field">
        <label for="inv_price">Price</label>
        <input type="text" id="inv_price" name="inv_price" value="<%= inv_price %>" readonly>
    </div>

    <!-- Hidden ID field MUST remain -->
    <input type="hidden" name="inv_id" value="<%= inv_id %>">
    <div class="delete-actions">
    <a href="/inv/management" class="cancel-btn">Cancel</a>
    <button type="submit" class="delete-btn">Delete</button>
    </div>
    </form>

    <!-- Confirmation Modal -->
    <div id="confirmModal" class="modal-overlay">
    <div class="modal-box">
        <h2>Confirm Delete</h2>
        <p>Are you absolutely sure you want to delete this vehicle?</p>

        <div class="modal-actions">
        <button class="modal-cancel" id="closeModalBtn">Cancel</button>
        <button class="modal-delete" id="confirmDeleteBtn">Yes, Delete</button>
        </div>
    </div>
</div>

<script src="/js/delete-modal.js"></script>